extends ../layouts/application.pug

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.fullName')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th= t('views.users.actions.header')
    tbody
      each user in users
        tr
          td= user.id
          td= user.fullName
          td= user.email
          td= formatDate(user.createdAt)
          td
            a(class="btn btn-primary me-1")= t('views.users.actions.edit')
            a(class="btn btn-danger")= t('views.users.actions.delete')
