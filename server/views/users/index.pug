extends ../layouts/application.pug

block header
  h1= t('views.users.index')

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.fullName')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th= t('views.users.actions.header')
    tbody
      each user in users
        tr
          td= user.id
          td= user.fullName
          td= user.email
          td= formatDate(user.createdAt)
          td
            div(class="flex d-flex")
              a(
                class="btn btn-primary me-1"
                href=route('editUser', { id: user.id })
              )= t('views.users.actions.edit')
              +buttonTo(
                route('deleteUser', { id: user.id }),
                'delete'
              )(
                class="btn btn-danger"
                value=t('views.users.actions.delete')
              )
