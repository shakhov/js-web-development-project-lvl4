extends ../layouts/application.pug

block header
  = t('views.tasks.new.title')

block content
  +formFor()(action=route('tasks') method='post')
    +input(task, 'name', t('views.tasks.name'), errors)(type="text")
    +input(taks, 'description', t('views.tasks.description'), errors)(type="text")
    +select(task, 'statusId', t('views.tasks.status'), statuses, true, errors)
    +select(task, 'executorId', t('views.tasks.executor'), users.map(({ id, fullName }) => ({ id, name: fullName })), false, errors)
    +submit(task)(value=t('views.tasks.new.submit'))
